<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="50dp">

        <Button
            android:id="@+id/group_sport_results_tables"
            android:layout_width="0dp"
            android:background="@drawable/login_big_button_neg"
            android:textColor="@drawable/login_big_button_text_neg"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/results_tables"/>

        <Button
            android:id="@+id/group_sport_results_matches"
            android:layout_width="0dp"
            android:background="@drawable/login_big_button_neg"
            android:textColor="@drawable/login_big_button_text_neg"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/results_matches"/>

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/group_sport_results_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</LinearLayout>