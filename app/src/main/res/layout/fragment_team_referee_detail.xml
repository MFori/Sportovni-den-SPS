<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/team_referee_detail_start_match"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_default"
        android:text="@string/match_detail_start"
        android:textColor="#fff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <cz.sps_pi.sportovni_den.view.TeamTextView
            android:id="@+id/team_referee_detail_team_1"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/team_icon"
            android:gravity="center"
            android:textSize="22sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <cz.sps_pi.sportovni_den.view.TeamTextView
            android:id="@+id/team_referee_detail_team_2"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/team_icon"
            android:gravity="center"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/team_referee_detail_score_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edit_text_default"
            android:gravity="start"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLines="1"
            android:padding="10dp"
            android:textSize="23sp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=":"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/team_referee_detail_score_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edit_text_default"
            android:gravity="end"
            android:inputType="number"
            android:maxLines="1"
            android:padding="10dp"
            android:textSize="23sp" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/team_referee_detail_save_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_default"
        android:text="@string/match_detail_save"
        android:textColor="#fff" />

</LinearLayout>