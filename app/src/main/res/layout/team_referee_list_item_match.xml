<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal"
    android:padding="15dp">

    <cz.sps_pi.sportovni_den.view.TeamTextView
        android:id="@+id/team_referee_list_item_team_1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/team_icon"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/team_referee_list_item_score_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        android:text=":"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/team_referee_list_item_score_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="start"
        android:textSize="20sp" />

    <cz.sps_pi.sportovni_den.view.TeamTextView
        android:id="@+id/team_referee_list_item_team_2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/team_icon"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>